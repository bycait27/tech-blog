<h3 class="edit-post-header">Edit Post</h3>
        <div class="edit-post-container">
            <form id="edit-post-form">
                <label for="title">Title</label>
                <input class="title" type="text" id="edit-title" name="title" value="{{blogPost.title}}">
                <label for="content">Content</label>
                <textarea class="content" id="edit-content" name="content">{{blogPost.content}}</textarea>
                <div class="form-button-container">
                    <input class="update-post-btn" type="submit" value="Update Post">
                    <input id="delete-post-btn" class="delete-post-btn" type="submit" value="Delete">
                </div>
            </form>
        </div>

<script src="/js/edit-blogpost.js"></script>
<script src="/js/delete-blogpost.js"></script>